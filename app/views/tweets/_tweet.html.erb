<div class="mb-3">
  <%= tweet.body %>
  <div class="me-4">
    <%= link_to "@#{tweet.twitter_account.username}", "https://twitter.com/#{tweet.twitter_account.username}", target: :_blank%>
    <% if tweet.published? %>
      <%= link_to"View Tweet", "https://twitter.com/#{tweet.twitter_account.username}/status/#{tweet.tweet_id}", target: :__blank%>
    <% else %>
      Scheduled for <%= l tweet.published_at, format: :long %>
      <%= link_to "Edit Tweet", edit_tweet_path(tweet) %>
    <% end %>
  </div>
</div>
